    <TargetFrameworks Condition="'$(OS)' != 'Windows_NT'">netcoreapp1.1;netcoreapp1.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="1.1.1" Condition="'$(TargetFramework)' == 'netcoreapp1.1'" />
    <PackageReference Include="Microsoft.AspNetCore" Version="1.0.4" Condition="'$(TargetFramework)' == 'netcoreapp1.0'" />
    <PackageReference Include="Yarn.MSBuild" Version="$(YarnVersion)" />
  </ItemGroup>

</Project>
